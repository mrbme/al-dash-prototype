<div class="container pt-5">
  <%= render 'partials/messages' %>
  <div class="text-center"><img class="mb-4" src="https://seedlogic.com/img/sl-purple.png" alt="" width="auto" height="72"></div>
  <h1 class="h3 text-center mb-3 font-weight-normal">Please sign in</h1>
  <%= form_for(:session, :html => {role: "form", class: "form-signin"}, url: login_path) do |f| %>
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, class: "form-control inputEmail", placeholder: "Enter email", autofocus: true %>
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control inputPassword", placeholder: "Enter password", autocomplete: "off" %>
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
  </div>